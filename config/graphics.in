# DF options

menu "Graphics"

config GRAPHICS
	bool
	prompt "Include DFGraphics"
	default y
	help
	  Select this to donwload all the DFGraphics tilesets.

config GRAPHICS_VERSION
	string
	prompt "Github revision of DFGraphics"
    default "master" if DF_V_0_42_06
    default "42.03" if DF_V_0_42_03
    default "40.24" if DF_V_0_40_24
	default ""
	depends on GRAPHICS
	help
	  DFGraphics revision from https://github.com/DFgraphics.

endmenu
