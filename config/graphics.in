# DF options

menu "Graphics"

config DFGRAPHICS_VERSION
	string
    default "42.05" if DF_V_0_42_05
    default "42.03" if DF_V_0_42_03
    default "40.24" if DF_V_0_40_24
    default ""

if !DFGRAPHICS_VERSION = ""

config DFGRAPHICS
	bool
	prompt "Include DFGraphics"
	help
	  Select this to include all the DFGraphics sets.

endif

if DFGRAPHICS_VERSION = ""
comment "no DFGraphics version known for the selected DF version."

config DFGRAPHICS
	bool
	prompt "Include specific revision of DFGraphics"
	help
	  Manually select a version of DFGraphics.

config DFGRAPHICS_REV
	string
	prompt "Github revision of DFGraphics"
	default "master"
	depends on DFGRAPHICS
	help
	  Download specific revision of DFGraphics. No guarantee!

endif
	
