# DF options

menu "Dwarf Fortress"

config DF
	bool
	default y

choice
    bool
    prompt "Dwarf Fortress version"

config DF_V_0_42_06
    bool
    prompt "0.42.06"
	
config DF_V_0_42_05
    bool
    prompt "0.42.05"

config DF_V_0_42_03
    bool
    prompt "0.42.03"

config DF_V_0_40_24
    bool
    prompt "0.40.24"
	
endchoice

config DF_CUSTOM
    bool
    prompt "Custom DF"
    depends on EXPERIMENTAL
    help
      The choosen DF version shall be not downloaded. Instead use
      a custom location.

if DF_CUSTOM

config DF_CUSTOM_LOCATION
    string
    prompt "Full path to custom DF version"
    default ""
    help
      Enter the path to the directory (or tarball) of your DF version,
      or leave blank to use default CT_CUSTOM_LOCATION_ROOT_DIR/df.

endif #DF_CUSTOM

config DF_VERSION
	   string
# Don't remove next line
# CT_INSERT_VERSION_STRING_BELOW
    default "42_06" if DF_V_0_42_06
    default "42_05" if DF_V_0_42_05
    default "42_03" if DF_V_0_42_03
    default "40_24" if DF_V_0_40_24

endmenu
